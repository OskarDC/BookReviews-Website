<%- include("partials/header.ejs") %>

<main>
    <h2 class="bold-text">Edit Review</h2>
    <section id="editReview">
        <form action="/update/<%= review.id %>" method="post">
            <div class="form-group">
                <label for="title" class="bold-text">Title:</label>
                <input type="text" id="title" name="title" value="<%= review.title %>" required>    
            </div>
            <div class="form-group">
                <label for="author" class="bold-text">Author:</label>
                <input type="text" id="author" name="author" value="<%= review.author %>" required>    
            </div>
            <div class="form-group">
                <label for="isbn" class="bold-text">ISBN:</label>
                <input type="text" id="isbn" name="isbn">    
            </div>
            <div class="form-group">
                <label for="rating" class="bold-text">Rating:</label>
                <input type="number" id="rating" name="rating" value="<%= review.rating %>" required>
            </div>
            <div class="form-group">
                <label for="text" class="bold-text">Review:</label>
                <textarea id="text" name="text" required><%= review.text %></textarea>
            </div>
            <div class="form-group">
                <label for="read_date" class="bold-text">Read Date:</label>
                <input type="date" id="read_date" name="read_date" value="<%= review.read_date.toISOString().split('T')[0] %>" required>
            </div>
            <button type="submit" class="bold-text">Edit Review</button>
        </form>
        <form action="/delete/<%= review.id %>" method="post" onsubmit="return confirm('Are you sure you want to delete this review?');">
            <input type="hidden" name="_method" value="DELETE">
            <button type="submit" class="bold-text delete-button">Delete Review</button>
        </form>
    </section>
</main>

<%- include("partials/footer.ejs") %>